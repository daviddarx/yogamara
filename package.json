{
  "name": "boilerplate-vuejs",
  "version": "1.0.0",
  "description": "Boilerplate for vuejs websites",
  "main": ".src/index.js",
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.2.0",
    "browser-detect": "^0.2.28",
    "eslint": "^6.0.0",
    "eslint-traverser": "^1.5.2",
    "lodash-cli": "^4.17.5",
    "marked": "^1.2.7",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-eslint": "^1.0.7",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "parcel-plugin-svg-sprite": "^1.4.1",
    "reset-css": "^4.0.1",
    "sass": "^1.29.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.18.0",
    "svgo": "^1.3.0",
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4",
    "vue-router": "^3.4.9",
    "vue-template-compiler": "^2.6.12"
  },
  "scripts": {
    "start": "parcel ./src/index.html",
    "build": "parcel build ./src/index.html",
    "clean": "rm -rf .cache/ && rm -rf dist/",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js,.vue src",
    "lint:css": "npm run lint:css:vue && npm run lint:css:scss",
    "lint:css:vue": "stylelint 'src/**/*.vue'",
    "lint:css:scss": "stylelint 'src/**/*.scss'",
    "svgooptim": "svgo static/images/assets/ --pretty --enable removeDimensions --disable=removeViewBox"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:daviddarx/boilerplate-vuejs.git"
  },
  "author": "David Darx",
  "license": "ISC"
}
